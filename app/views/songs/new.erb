<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Create a New Song: </h1>

<form action="/songs/new" method="POST">
  <label for="song[name]">Song Name:</label>
 
  	<input 
  		type="text" 
  		name="song[name]" 
  		id="song_name"
  		value="song_name"
  		>
  
  	<br></br>
	
	<label for="artist_name">Artist:</label>
	<input 
		type="text" 
		name="song[artist]" 
		id="artist_name"
		value="artist_name"
		>
	<br></br>

	<label for="genre_name">Genre</label>

	<!-- Make a checkbox for all the existing genres then create new?  -->
	<% Genre.all.each do |genre|
		<input 
		type="checkbox" 
		name="genres[]" 
		id="<%= genre.name %>"
		value="<%= genre.id%>" >
		<% end %>
	
	<br></br>
 
	

  	<input type="submit" value="Create New Song">

</form>