<h1>Edit a Song: </h1>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>


<h1>Edit a song</h1>

<form action="/songs/edit" method="POST">

<p>The current song is: 
<%= @song.name %><br>
<%= @song.artist %><br>
<%= @song.genre %><br>
</p>

  <label for="song_name">Edit the Song Name:</label>
 
  	<input 
  		type="text" 
  		name="song_name" 
  		id="song_name"
  		value="song name"
  		>
  
  	<br></br>
	
	<label for="artist.name">Edit the Artist:</label>
	<input 
		type="text" 
		name="song_artist" 
		id="song_artist"
		value="artist"
		>
	<br></br>

	<label for="genre_name">Genre</label>

	<!-- Make a checkbox for all the existing genres then create new?  -->
	<% Genre.all.each do |genre|
		<input 
		type="checkbox" 
		name="genres[]" 
		id="<%= genre.name %>"
		value="<%= genre.id%>" >
		<% end %>
	
	<br></br>
 
	

  	<input type="submit" value="Create New Song">

</form>